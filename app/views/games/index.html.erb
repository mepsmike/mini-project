<div class="container-fluid">

	<div class="jumbotron" >
		<h1>桌遊管理系統</h1>
	</div>
	<div class="row ">
		<div class="col-md-2">

			<%if @game!=nil %>
				<%= form_for @game do |f| %>
				<% if @game.errors.any? %>
				<div id="error_explanation">
					<ul>
						<% @game.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
				<% end %>

					<div class="form-group"><%= f.text_field :name, :placeholder => "名稱", :class =>"form-control"%></div>
					<div class="form-group"><%= f.text_field :year, :placeholder => "出版年份", :class =>"form-control"%></div>
					<div class="form-group"><%= f.text_area :description, :placeholder => "簡介", :class =>"form-control"%></div>
					<%= f.submit "更新", :class => "btn btn-primary btn-lg"%>
					<%= link_to '取消', games_path, :class => "btn btn-warning btn-lg"  %>

				<% end %>

			<%else %>

				<%= form_for (@newgame), :url => games_path, :method => :create do |f| %>
				<% if @newgame.errors.any? %>
				<div id="error_explanation">
					<ul>
					<% @newgame.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
					</ul>
				</div>
				<% end %>

				<div class="form-group"><%= f.text_field :name, :placeholder => "名稱", :class =>"form-control"%></div>
				<div class="form-group"><%= f.text_field :year, :placeholder => "出版年份", :class =>"form-control"%></div>
				<div class="form-group"><%= f.text_area :description, :placeholder => "簡介", :class =>"form-control"%></div>
				<%= f.submit "送出", :class => "btn btn-primary btn-lg"%>
				<% end %>

			<% end %>


			
				
					
		</div>
		<div class="col-md-10 ">
			<div>
				<!--<%= link_to 'add' , new_game_path %>-->
			</div>

		
			<%if flash[:notice].present?%>
			<div class="alert alert-success text-center" role="alert">
				<%=flash[:notice]%>
			</div>
			<%end%>
			<table class="table text-center">
				<% @games.each do |g| %>
				<tr>
					<td> <%= g.name %></td>
					<td> <%= g.year %></td>
					<td> <%= link_to 'More...', game_path(g)  %></td>
					<td> <%= link_to '編輯', edit_game_path(g),:class => "btn btn-success btn-sm" %>
					 <%= link_to '刪除', game_path(g),:class => "btn btn-danger btn-sm", :method => :delete%></td>
				</tr>
				<% end %>
			</table>
			<div class="text-center"><%= paginate @games %></div>
		</div>
		

	</div>
</div>



